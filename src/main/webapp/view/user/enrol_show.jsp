    <script src="${pageContext.request.contextPath}/statics/echarts/echarts.js"> </script>
    <script src="${pageContext.request.contextPath}/statics/echarts/china.js"> </script>
    <script src="${pageContext.request.contextPath}/statics/boot/js/jquery-2.2.1.min.js"></script>
    <script type="text/javascript">

        // 基于准备好的dom，初始化echarts实例
        var myChart = echarts.init(document.getElementById('main'));

        $(function () {
            $.ajax({
                url:'${pageContext.request.contextPath}/user/enrolCount',
                type:'post', //静态资源
                //data:'',
                datatype:'json',
                success:function (result) {
                    console.log(result);
                    // 指定图表的配置项和数据
                    var option = {
                        title: {
                            text: '近三周用户注册数量',
                            //subtext:'二级标题'
                        },
                        tooltip: {},
                        legend: {
                            data:['男','女']
                        },
                        xAxis: {
                            data: ["近一周","近两周","近三周"]
                        },
                        yAxis: {},
                        series: [{
                            name: '男',
                            type: 'bar',
                            data: result.maleCount
                        },{
                            name: '女',
                            type: 'bar',
                            data: result.girlCount
                        }]
                    };
                    // 使用刚指定的配置项和数据显示图表。
                    myChart.setOption(option);
                }
            })
        })

        //使用goeasy完成实时更新
        var goEasy = new GoEasy({
            appkey:"BC-e61b09f5c5dd45648d84b4d694e8f51a"
        })
        goEasy.subscribe({
            channel:"test",
            onMessage:function (message) {
                $.ajax({
                    url:"",
                    type:"",
                    dataType:"",
                    success:function (data) {
                        myChart.setOption({
                            series: [{
                                data: [data.maleCount,data.girlCount]
                            }]
                        })
                    }
                })

            }
        })
    </script>
